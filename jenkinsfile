pipeline {
    agent any

    tools {
        maven 'Maven3.8.4'
        jdk 'Java17'
    }

    triggers {
        githubPush()
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/Tomi7710/NG.git'
            }
        }

        stage('Build') {
            steps {
                sh "mvn clean package -DskipTests"
            }
        }

        stage('Test') {
            steps {
                sh "mvn test"
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying WAR to remote Tomcat server via SSH..."
                
                // Use the SSH credential you added in Jenkins
                sshagent(['tomcat-ssh']) {
                    sh '''
                        # Copy WAR to remote Tomcat server
                        scp -o StrictHostKeyChecking=no target/*.war ec2-user@18.220.215.53:/apache-tomcat-7.0.94/webapps/

                    '''
                }
            }
        }
    }
}


